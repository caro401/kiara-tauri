/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

input,
input[type='text'],
input[type='search'],
input[type='radio'],
input[type='checkbox'],
select {
	@apply box-content border-2 border-purple-500 accent-purple-500 checked:bg-purple-500 focus:ring-purple-500 focus:border-purple-500;
}

input[type='text'],
input[type='search'] {
	@apply rounded-md;
}

h1,
h2 {
	@apply font-bold text-purple-500 my-4;
}

h1 {
	@apply text-5xl;
}

h2 {
	@apply text-3xl;
}

button,
a.button {
	@apply bg-purple-300 py-3 px-4 my-4 hover:bg-purple-200 font-semibold inline-flex text-slate-900 hover:text-slate-900 no-underline rounded-md;
}

a {
	@apply underline text-purple-500 hover:text-purple-600 focus:text-purple-600;
}

.error {
	@apply text-red-600 text-sm font-bold;
}

.error::before {
	content: '‚ùó';
}

/*@import 'https://cdn.jsdelivr.net/npm/gridjs/dist/theme/mermaid.min.css';*/
.gridjs-head button,
.gridjs-footer button {
	@apply cursor-pointer bg-transparent p-0 m-0 border-none outline-none;
}

.gridjs-temp {
	@apply relative;
}

.gridjs-head {
	@apply w-full mb-2 px-3 py-2;
}

.gridjs-head::after {
	content: '';
	display: block;
	clear: both;
}

.gridjs-container {
	@apply overflow-hidden inline-block p-[2px] text-slate-900 relative z-0;
}

.gridjs-footer {
	@apply block relative w-full z-10 px-3 py-2 border-t border-slate-200 bg-white rounded-b-lg;
	box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.26);
}

.gridjs-footer:empty,
.gridjs-head:empty {
	@apply p-0 border-none;
}

.gridjs-pagination {
	@apply text-slate-700;
}

.gridjs-pagination::after {
	content: '';
	display: block;
	clear: both;
}

.gridjs-pagination .gridjs-summary {
	@apply float-left mt-1;
}

.gridjs-pagination .gridjs-pages {
	@apply float-right;
}

.gridjs-pagination .gridjs-pages button {
	@apply py-1.5 px-3 bg-white outline-none select-none;
	border: 1px solid #d2d6dc;
	border-right: none;
}

.gridjs-pagination .gridjs-pages button:focus {
	box-shadow: 0 0 0 2px rgba(149, 189, 243, 0.5);
	position: relative;
	margin-right: -1px;
	border-right: 1px solid #d2d6dc;
}

.gridjs-pagination .gridjs-pages button:hover {
	@apply bg-slate-200 outline-none;
}

.gridjs-pagination .gridjs-pages button:disabled,
.gridjs-pagination .gridjs-pages button[disabled],
.gridjs-pagination .gridjs-pages button:hover:disabled {
	@apply cursor-default bg-white text-slate-500;
}

.gridjs-pagination .gridjs-pages button.gridjs-spread {
	@apply cursor-default;
}

.gridjs-pagination .gridjs-pages button.gridjs-currentPage {
	@apply font-bold bg-slate-100;
}

.gridjs-pagination .gridjs-pages button:last-child {
	@apply rounded-r-md;
	border-right: 1px solid #e2e8f0;
}

.gridjs-pagination .gridjs-pages button:first-child {
	@apply rounded-l-md;
}

.gridjs-pagination .gridjs-pages button:last-child:focus {
	@apply mr-0;
}

button.gridjs-sort {
	@apply float-right h-6 w-3 bg-transparent bg-no-repeat bg-center cursor-pointer p-0 m-0 bg-contain border-none;
}

button.gridjs-sort-neutral {
	opacity: 0.3;
	background-image: url('data:image/svg+xml;base64,');
	background-position-y: center;
}

button.gridjs-sort-asc {
	background-image: url('data:image/svg+xml;base64,');
	background-position-y: 35%;
	background-size: 10px;
}

button.gridjs-sort-desc {
	background-image: url('data:image/svg+xml;base64,');
	background-position-y: 65%;
	background-size: 10px;
}

button.gridjs-sort:focus {
	@apply outline-none;
}

table.gridjs-table {
	@apply w-full max-w-full border-collapse text-left table p-0 m-0 overflow-auto table-fixed;
}

td.gridjs-td {
	@apply px-3 py-2 border border-slate-200 box-content;
}

td.gridjs-td:first-child,
th.gridjs-th:first-child {
	@apply border-l-0;
}

td.gridjs-td:last-child,
th.gridjs-th:last-child {
	@apply border-r-0;
}

td.gridjs-message {
	@apply text-center;
}

th.gridjs-th {
	@apply relative text-slate-800 bg-purple-50 font-bold whitespace-nowrap px-3 py-2 select-none box-border outline-0 border border-slate-200 border-t-0 align-middle;
}

th.gridjs-th .gridjs-th-content {
	@apply text-ellipsis overflow-hidden w-full float-left;
}

th.gridjs-th-sort {
	@apply cursor-pointer hover:bg-purple-100 focus:bg-purple-100;
}

th.gridjs-th-sort .gridjs-th-content {
	width: calc(100% - 15px);
}

th.gridjs-th-fixed {
	position: sticky;
	box-shadow: 0 1px 0 0 #e2e8f0;
}

@supports (-moz-appearance: none) {
	th.gridjs-th-fixed {
		box-shadow: 0 0 0 1px #e2e8f0;
	}
}

.gridjs-tr {
	@apply border-none;
}

.gridjs-tr-selected td {
	@apply bg-slate-100;
}

.gridjs-tr:last-child td {
	@apply border-b-0;
}

.gridjs *,
.gridjs :after,
.gridjs :before {
	@apply box-border text-base text-slate-900;
}

.gridjs-wrapper {
	@apply relative z-0 overflow-auto w-full antialiased shadow-sm rounded-t-md block border-t-[1px] border-slate-200;
	box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.26);
}

.gridjs-wrapper:nth-last-of-type(2) {
	@apply rounded-md border-b-[1px];
}

.gridjs-search {
	@apply float-left;
}

.gridjs-search-input {
	@apply w-64 -ml-3;
}

.gridjs-loading-bar {
	@apply z-20 absolute left-0 right-0 top-0 bottom-0 bg-white opacity-50;
}

.gridjs-loading-bar::after {
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	transform: translateX(-100%);
	background-image: linear-gradient(
		90deg,
		rgba(204, 204, 204, 0) 0,
		rgba(204, 204, 204, 0.2) 20%,
		rgba(204, 204, 204, 0.5) 60%,
		rgba(204, 204, 204, 0)
	);
	animation: shimmer 2s infinite;
	content: '';
}

@keyframes shimmer {
	100% {
		transform: translateX(100%);
	}
}

.gridjs-td .gridjs-checkbox {
	@apply block m-auto cursor-pointer;
}

.gridjs-resizable {
	position: absolute;
	top: 0;
	bottom: 0;
	right: 0;
	width: 5px;
}

.gridjs-resizable:hover {
	cursor: ew-resize;
	background-color: #9bc2f7;
}
